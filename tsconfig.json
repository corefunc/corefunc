{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "js",
    "mjs",
    "node_modules",
    "test"
  ],
  "include": [
    "ts"
  ]
}