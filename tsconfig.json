{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "tests"],
  "include": [
    "array",
    "cast",
    "check",
    "cli",
    "collection",
    "convert",
    "crypt",
    "date",
    "dom",
    "fp",
    "func",
    "generate",
    "hash",
    "high-order",
    "is",
    "json",
    "lang",
    "number",
    "object",
    "promise",
    "prototype",
    "regex",
    "string",
    "text",
    "v8",
    "valid",
    "var"
  ]
}
